---
// src/components/About.astro

// Your Experience Data
const experiences = [
  { period: "Jan 2025 - Nov 2025", location: "Tabriz, Iran", role: "Software Engineer", company: "Nagsh Film", description: "Orchestrated the design and deployment of 10 Odoo modules and delivered ERP customization that automated workflows. Implemented real-time BI dashboards in Power BI, improving data visualization and automating reporting." },
  { period: "Nov 2024 - Aug 2025", location: "Remote, Part-time", role: "AI Developer (Healthcare Data)", company: "Azmayeshgah Khayyam", description: "Developed deep learning models for MRI image analysis with a cross-functional team. Contributed to 3 research prototypes, improving disease prediction accuracy and supporting faster diagnostics." },
  { period: "Nov 2022 - Nov 2024", location: "Scotland (Remote)", role: "Data Analyst / AI Developer", company: "Mealzo", description: "Engineered a location-based Q&A system for 10K+ business records. Developed 5+ interactive Power BI dashboards, cutting reporting time by 60%." }
];

// Your Certifications Data
const certifications = [
    "LLM Agents, Hugging Face",
    "Data Science Professional, University of Tehran",
    "SQL for Data Science, University of California - Coursera",
    "Mathematics for Machine Learning: Linear Algebra, Coursera"
];
---

<!-- Section 1: Hero -->
<section class="min-h-screen flex items-center justify-center pt-32 pb-20">
  <div class="container mx-auto px-6">
    <div class="grid md:grid-cols-2 gap-16 items-center">
      <div class="relative order-2 md:order-1">
        <div class="absolute -top-8 -right-8 w-32 h-32 border border-primary/30 rounded-[40px] z-0"></div>
        <div class="absolute -bottom-8 -left-8 w-48 h-48 border border-primary/30 rounded-[60px] z-0"></div>
        <div class="relative rounded-3xl overflow-hidden aspect-[3/4] bg-gray-800 z-10">
          <img src="/pro.jpg" alt="Milad Ghashangi Aghdam" class="w-full h-full object-cover" />
        </div>
      </div>
      <div class="order-1 md:order-2">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">Milad Ghashangi Aghdam</h1>
        <h2 class="text-2xl text-primary mb-6">AI Engineer</h2>
        <p class="text-gray-400 text-lg leading-relaxed">
          AI Engineer specializing in Retrieval-Augmented Generation (RAG) and LLMs to automate processes and accelerate reporting. Skilled at turning complex datasets into clear insights that support business growth.
        </p>
        <a href="/works" class="mt-8 inline-flex items-center gap-3 px-10 py-4 bg-primary hover:bg-primary-hover rounded-full text-sm font-semibold tracking-wider transition-colors">
          VIEW MY PROJECTS
        </a>
        <a 
          href="/Milad_Ghashangi_Aghdam_Resume.pdf" 
          download
          class="inline-flex items-center gap-3 px-10 py-4 border border-gray-600 rounded-full text-sm font-semibold tracking-wider hover:border-primary hover:text-primary transition-colors">
          DOWNLOAD CV
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Section 2: Skills -->
<section class="py-20 bg-[#151515]">
    <div class="container mx-auto px-6">
        <h2 class="text-4xl md:text-5xl font-bold mb-16 text-center">Skills</h2>
        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
            <div class="bg-[#1a1a1a] p-8 rounded-2xl"><h3 class="text-2xl font-bold mb-4 text-primary">ML & AI</h3><p class="text-gray-400 font-semibold">Frameworks:</p><p class="text-gray-400 mb-2">PyTorch, Scikit-learn, Hugging Face</p><p class="text-gray-400 font-semibold">Techniques:</p><p class="text-gray-400">RAG, PEFT with LoRA & QLoRA</p></div>
            <div class="bg-[#1a1a1a] p-8 rounded-2xl"><h3 class="text-2xl font-bold mb-4 text-primary">Languages & Tools</h3><p class="text-gray-400 font-semibold">Programming:</p><p class="text-gray-400 mb-2">Python (Pandas, NumPy), SQL</p><p class="text-gray-400 font-semibold">Frameworks:</p><p class="text-gray-400">Odoo, Web Scraping, Docker</p></div>
            <div class="bg-[#1a1a1a] p-8 rounded-2xl"><h3 class="text-2xl font-bold mb-4 text-primary">Data Analysis</h3><p class="text-gray-400 font-semibold">Tools:</p><p class="text-gray-400 mb-2">Microsoft Power BI</p><p class="text-gray-400 font-semibold">Capabilities:</p><p class="text-gray-400">Dashboards, Reporting</p></div>
        </div>
    </div>
</section>

<!-- Section 3: Experience -->
<section class="py-20">
    <div class="container mx-auto px-6">
        <h2 class="text-4xl md:text-5xl font-bold mb-16 text-center">Experience</h2>
        <div class="max-w-4xl mx-auto space-y-12">
            {experiences.map(job => (
                <div class="flex flex-col sm:flex-row gap-4 sm:gap-8">
                    <div class="flex-shrink-0 sm:w-48 text-primary font-bold text-lg">{job.period}<br/><span class="text-gray-400 font-normal text-base">{job.location}</span></div>
                    <div><h3 class="text-2xl font-bold mb-1">{job.role}</h3><p class="text-gray-300 text-lg mb-3">{job.company}</p><p class="text-gray-400">{job.description}</p></div>
                </div>
            ))}
        </div>
    </div>
</section>

<!-- Section 4: Certifications -->
<section class="py-20 bg-[#151515]">
    <div class="container mx-auto px-6">
        <h2 class="text-4xl md:text-5xl font-bold mb-16 text-center">Certifications</h2>
        <div class="max-w-4xl mx-auto text-center">
            {certifications.map(cert => (
                <p class="text-gray-300 text-lg mb-2">{cert}</p>
            ))}
        </div>
    </div>
</section>