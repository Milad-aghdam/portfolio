---
const currentPath = Astro.url.pathname;

const normalizePath = (path: string) => path.replace(/\/$/, '');
const current = normalizePath(currentPath);
---

<header class="fixed top-0 w-full z-50 bg-[#1a1a1a]/80 backdrop-blur-sm">
  <nav class="container mx-auto px-6 py-6 flex items-center justify-between">
    <a href="/portfolio/" class="text-2xl font-bold tracking-wider hover:text-primary transition-colors">
      MILAD<span class="text-gray-400">.</span>AI
    </a>
    
    <ul class="hidden md:flex items-center gap-12 text-sm tracking-wide text-gray-300">
      <li>
        <a href="/portfolio/" 
           class={`hover:text-white transition-colors ${current === '/portfolio' || current === '/portfolio/' ? 'text-white' : ''}`}>
          HOME
        </a>
      </li>
      <li>
        <a href="/portfolio/about" 
           class={`hover:text-white transition-colors ${current.includes('/portfolio/about') ? 'text-white' : ''}`}>
          ABOUT
        </a>
      </li>
      <li>

        <a href="/portfolio/works" 
           class={`hover:text-white transition-colors ${current.includes('/portfolio/works') ? 'text-white' : ''}`}>
          PROJECTS
        </a>
      </li>
    </ul>

    <div class="hidden md:flex items-center gap-4">
      <a href="https://github.com/Milad-aghdam" 
         target="_blank"
         class="w-10 h-10 flex items-center justify-center rounded-full hover:bg-gray-800 transition-colors">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
        </svg>
      </a>

      <a href="/portfolio/contact" 
         class="px-8 py-3 border border-gray-600 rounded-full text-sm tracking-wide hover:border-primary hover:text-primary transition-colors">
        CONTACT
      </a>
    </div>

    <button id="mobile-menu-btn" class="md:hidden text-white">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>


  <div id="mobile-menu" class="hidden md:hidden bg-[#1a1a1a] border-t border-gray-800">
    <ul class="container mx-auto px-6 py-6 space-y-4">
      <li><a href="/portfolio/" class="block text-gray-300 hover:text-white">HOME</a></li>
      <li><a href="/portfolio/about" class="block text-gray-300 hover:text-white">ABOUT</a></li>
      <li><a href="/portfolio/works" class="block text-gray-300 hover:text-white">PROJECTS</a></li>
      <li><a href="/portfolio/contact" class="block text-gray-300 hover:text-white">CONTACT</a></li>
    </ul>
  </div>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>