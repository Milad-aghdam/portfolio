<section id="home" class="min-h-screen flex items-center justify-center pt-20">
  <div class="container mx-auto px-6 text-center">
    <div class="mb-6">
      <span class="inline-block px-6 py-2 bg-primary/10 text-primary rounded-full text-sm font-semibold tracking-wider mb-6">
        AI ENGINEER & DATA SPECIALIST
      </span>
    </div>
    
    <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold mb-8 tracking-tight">
      Building Intelligent<br />
      <span class="block mt-2 text-transparent bg-clip-text bg-gradient-to-r from-primary to-orange-400">
        AI Systems
      </span>
    </h1>
    
    <p class="text-gray-400 text-xl md:text-2xl mb-12 max-w-3xl mx-auto">
      Specializing in RAG, LLMs, and scalable AI solutions that transform 
      complex data into actionable insights
    </p>
    
    <div class="flex flex-wrap gap-4 justify-center">
      <a href="/works" 
         class="inline-flex items-center gap-3 px-10 py-4 bg-primary hover:bg-primary-hover rounded-full text-sm font-semibold tracking-wider transition-colors">
        EXPLORE PROJECTS
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
      
      <a href="/contact" 
         class="inline-flex items-center gap-3 px-10 py-4 border border-gray-600 hover:border-primary rounded-full text-sm font-semibold tracking-wider transition-colors">
        CONTACT ME
      </a>
    </div>

    <!-- Tech Stack Icons -->
    <div class="mt-20 flex flex-wrap items-center justify-center gap-8 text-gray-500">
      <span class="text-sm">TECH STACK:</span>
      <span class="text-sm hover:text-primary transition-colors">PyTorch</span>
      <span class="text-sm hover:text-primary transition-colors">LangChain</span>
      <span class="text-sm hover:text-primary transition-colors">Llama3</span>
      <span class="text-sm hover:text-primary transition-colors">Power BI</span>
      <span class="text-sm hover:text-primary transition-colors">Docker</span>
    </div>
  </div>
</section>