---
import Layout from '../layouts/Layout.astro';

const experiences = [
  { period: "Jan 2025 - Present", location: "Tabriz, Iran", role: "Software Engineer", company: "Nagsh Film", description: "Orchestrated the design and deployment of 10 Odoo modules and delivered ERP customization that automated workflows. Implemented real-time BI dashboards in Power BI, improving data visualization and automating reporting." },
  { period: "Nov 2024 - Aug 2025", location: "Remote, Part-time", role: "AI Developer (Healthcare Data)", company: "Azmayeshgah Khayyam", description: "Developed deep learning models for MRI image analysis with a cross-functional team. Contributed to 3 research prototypes, improving disease prediction accuracy and supporting faster diagnostics." },
  { period: "Nov 2022 - Nov 2024", location: "Scotland (Remote)", role: "Data Analyst / AI Developer", company: "Mealzo", description: "Engineered a location-based Q&A system for 10K+ business records. Developed 5+ interactive Power BI dashboards, cutting reporting time by 60%." }
];

const certifications = [
    "LLM Agents, Hugging Face",
    "Data Science Professional, University of Tehran",
    "SQL for Data Science, University of California - Coursera",
    "Mathematics for Machine Learning: Linear Algebra, Coursera"
];
